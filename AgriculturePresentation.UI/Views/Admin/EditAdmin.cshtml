@model AgriculturePresentation.Entities.Concrete.Admin
@{
    ViewData["Title"] = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Bilgi Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AdminID)
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" placeholder="ad soyad" asp-for="AdminUserName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görev</label>
                    <input type="password" class="form-control" placeholder="görev" asp-for="AdminPassword">
                </div>
                <button class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>