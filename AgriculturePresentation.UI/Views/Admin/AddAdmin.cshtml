@model AgriculturePresentation.Entities.Concrete.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>               
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="AdminUserName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şifre</label>
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="AdminPassword">
                </div>                
                <button class="btn btn-outline-info">Ekle</button>
            </form>
        </div>
    </div>
</div>