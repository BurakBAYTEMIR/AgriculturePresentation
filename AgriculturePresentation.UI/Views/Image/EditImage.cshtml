@model AgriculturePresentation.Entities.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Görsel Girişi</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ImageID"/>
                <div class="form-group">
                    <label>Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="görsel başlığını giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="görsel açıklamasını giriniz" asp-for="Description">
                </div>
                <div class="form-group">
                    <label>Görsel yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="görsel yolunu giriniz" asp-for="ImageUrl">
                </div>
                <button class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>