@using AgriculturePresentation.Entities.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                @if (Model.Count > 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                                <th><div class="text-center">Durumu</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AnnouncementID</td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-warning">Güncelle</a></td>
                                    @if (@item.Status == true)
                                    {
                                        <td >
                                            <div class="text-center">
                                                <span class="text-success">AKTİF</span><br/>
                                                <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementID" class="btn btn-outline-danger mt-2">Pasif Yap</a>
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <div class="text-center">
                                                <span class="text-danger">PASİF</span><br />
                                                <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID" class="btn btn-outline-success mt-2">Aktif Yap</a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>UYARI!</strong> Veri tabanınızda Duyuru bulunamamıştır!
                    </div>
                    <div class="alert alert-warning">
                        <strong>UYARI!</strong> Lütfen Duyuru girişi yapınız!
                    </div>
                }
            </div>
            <br />
            <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
        </div>
    </div>
</div>


