@model AgriculturePresentation.Entities.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Girişi</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama</label>
                    <input type="text" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim</label>
                    <input type="text" class="form-control" placeholder="Resim" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Class-1</label>
                    <input type="text" class="form-control" placeholder="Class-1" asp-for="Calss1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Class-2</label>
                    <input type="text" class="form-control" placeholder="Class-2" asp-for="Calss2">
                </div>
                <button class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>